                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Rate)
                </dt>

                <dd class="rating">
                    @Ajax.ActionLink(" (+1)", "Like", new { Model.Id }, null, new { @class = "fa fa-thumbs-up" })
                    @Html.DisplayFor(modelItem => Model.Rate)
                    @Ajax.ActionLink(" (-1)", "Dislike", new { Model.Id }, null, new { @class = "fa fa-thumbs-down" })
                </dd>

                <dt>
                    Sample Images
                </dt>

                <dd>
                    <a href="@Html.DisplayFor(model => model.SampleImage)" target="_blank"><img src="@Html.DisplayFor(model => model.SampleImage)" /></a>
                </dd>

            </dl>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 imgViewer">
            <a href="@Html.DisplayFor(model => model.Image)" target="_blank"><img class="widePic" src="@Html.DisplayFor(model => model.Image)" /></a>
        </div>
    </div>
    <div class="btns">
        <button class="btn">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
        </button>
        <button class="btn">
            @Html.ActionLink("Delete", "Delete", new { id = Model.Id })
        </button>
    </div>
