                <dd>
                    @Html.DisplayFor(model => model.Megapixels)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Sensor)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Sensor)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ISO)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ISO)
                </dd>

                <dt>
